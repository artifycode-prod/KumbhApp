# Bharat Kumbh Backend - Environment Variables
# Copy to .env and fill in your values

# JWT Secret for authentication tokens
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# PostgreSQL Database (Neon, Supabase, or any PostgreSQL)
# Use DATABASE_URL or POSTGRES_URI
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Optional: Alternative env var name
# POSTGRES_URI=postgresql://user:password@host:5432/database?sslmode=require

# CORS - allowed origins (use * for development)
CORS_ORIGIN=*

# JWT expiration (optional, default 7d)
# JWT_EXPIRE=7d
